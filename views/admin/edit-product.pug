extends ../layout/main-layout.pug
 
block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")
block content
  main
    form.product-form(action=(editMode==="true" ? "/admin/edit-product":"/admin/add-product"), method="POST")
      .form-control
        label(for="title") Title
        input(type="text", name="title", id="title" value=(editMode==="true" ? product.title:""))
        label(for="price") Price
        input(type="text", name="price", id="price" value = (editMode==="true" ? product.price:""))
        label(for="imgUrl") imgUrl
        input(type="text" name="imgUrl" max="20000" value = (editMode==="true" ? product.imgUrl:""))
        input(type="hidden", name="productId", value=(editMode==="true" ? product._id:""))
        label(for="description") Description
        textarea(rows="5"  cols="50", name="description")  #{editMode === "true" ? product.description:""}
        input(type="hidden", name="_csrf", value = csrfToken)
      button(type="submit") #{editMode==="true" ? "Edit Product":"Add Product"}
    
