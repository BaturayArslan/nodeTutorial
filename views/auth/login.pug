extends ../layout/main-layout.pug

block styles 
 link(rel="stylesheet", href="/css/main.css")
 link(rel="stylesheet" , href="/css/auth.css")
 link(rel="stylesheet" , href="/css/forms.css")

block content
  main
    if (errors[0])
      div.message.eror-message #{errors[0].msg}
    form.login-form(action="/login" method="POST" novalidate)
      div.form-control
        label(for="email") E-Mail
        input(type="email" name="email" id="email" value = userInput.email)
      div.form-control
        label(for="password") Password
        input(type="password" name="password" id="password" value = userInput.password)  
        input(type="hidden", name="_csrf", value = csrfToken)
      button.btn(type="submit") Login
      a.centered(href="/reset") Forget Password?
